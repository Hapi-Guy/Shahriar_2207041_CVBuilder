<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cvbuilder.controllers.CVListController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;" styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="app-title" text="Saved CVs" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#onBackToHome" text="â† Back to Home" />
            </HBox>
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Search:" />
                <TextField fx:id="searchField" promptText="Search by name or email..." HBox.hgrow="ALWAYS" />
                <Button onAction="#onRefresh" styleClass="primary-button" text="Refresh" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label fx:id="statusLabel" styleClass="status-message" />
            
            <TableView fx:id="cvTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="200" text="Full Name" />
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                    <TableColumn fx:id="phoneColumn" prefWidth="150" text="Phone" />
                    <TableColumn fx:id="dateColumn" prefWidth="150" text="Created Date" />
                </columns>
            </TableView>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="viewButton" disable="true" onAction="#onViewCV" prefWidth="100" styleClass="primary-button" text="View CV" />
                <Button fx:id="editButton" disable="true" onAction="#onEditCV" prefWidth="100" styleClass="primary-button" text="Edit CV" />
                <Button fx:id="deleteButton" disable="true" onAction="#onDeleteCV" prefWidth="100" styleClass="primary-button" style="-fx-background-color: #e74c3c;" text="Delete CV" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
